        "tee": "^0.2.0"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/node": "^12.12.6",
        "@types/stream-buffers": "^3.0.3",
        "prettier": "^1.18.2",
        "purple-tape": "^3.9.1",
